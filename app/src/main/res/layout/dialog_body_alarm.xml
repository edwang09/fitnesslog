<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        >
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="@string/body_alarm_switch"/>

    <LinearLayout
        android:id="@+id/lv_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_16sdp"
        >
        <TextView
            android:id="@+id/tv_body_alarm_hour"
            android:text="9"
            android:textSize="@dimen/_32sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            />
        <TextView
            android:id="@+id/tv_body_alarm_colon"
            android:text=" : "
            android:textSize="@dimen/_32sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            />
        <TextView
            android:id="@+id/tv_body_alarm_minute"
            android:text="20"
            android:textSize="@dimen/_32sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            />

        <TextView
            android:id="@+id/tv_body_alarm_ampm"
            android:text="AM"
            android:textSize="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <Button
            android:id="@+id/btn_pick_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pick a Time"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="right"/>
        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="right"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>